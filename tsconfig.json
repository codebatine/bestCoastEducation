{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true // Allow JavaScript files to be compiled
  },
  "include": [
    "script/**/*.ts", // Include TypeScript files in the script directory
    "script/**/*.js" // Include JavaScript files in the script directory
  ],
  "exclude": [
    "node_modules"
  ]
}